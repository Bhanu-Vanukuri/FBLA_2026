{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fbla-byte-sized-business-boost",
  "version": "0.1.0",
  "identifier": "com.bhanuvanukuri.fbla-byte-sized-business-boost",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fbla-byte-sized-business-boost",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "PublicAppCategory",
    "shortDescription": "FBLA Byte-Sized Business Boost - Local Business Discovery Platform",
    "longDescription": "A comprehensive desktop application for discovering and supporting local businesses. Features include business search, reviews, deals, favorites, and intelligent recommendations built for the FBLA Coding & Programming competition.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
